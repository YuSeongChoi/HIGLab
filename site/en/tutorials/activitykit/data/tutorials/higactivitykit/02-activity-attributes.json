tion","","struct DeliveryAttributes: ActivityAttributes {","    let orderNumber: String","    let storeName: String","    let storeImageURL: URL?","    let customerAddress: String","    ","    \/\/ MARK: - Content State","    \/\/ 실시간으로 업데이트되는 상태","    ","    struct ContentState: Codable, Hashable {","        \/\/ 현재 배달 상태","        let status: DeliveryStatus","        ","        \/\/ 예상 도착 시간","        let estimatedArrival: Date","        ","        \/\/ 배달원 정보","        let driverName: String?","        let driverImageURL: URL?","        ","        \/\/ 진행률 (0.0 ~ 1.0)","        var progress: Double {","            switch status {","            case .preparing: 0.2","            case .pickedUp:  0.5","            case .nearby:    0.8","            case .delivered: 1.0","            }","        }","        ","        \/\/ 상태 메시지","        var statusMessage: String {","            switch status {","            case .preparing: \"음식을 준비 중이에요\"","            case .pickedUp:  \"\\(driverName ?? \"배달원\")님이 픽업했어요\"","            case .nearby:    \"거의 다 왔어요!\"","            case .delivered: \"배달 완료!\"","            }","        }","    }","}"],"identifier":"02-content-state.swift","syntax":"swift","highlights":[{"line":10},{"line":11},{"line":12},{"line":14},{"line":15},{"line":16},{"line":17},{"line":18},{"line":19},{"line":20},{"line":21},{"line":22},{"line":23},{"line":24},{"line":25},{"line":26},{"line":27},{"line":28},{"line":29},{"line":30},{"line":31},{"line":32},{"line":33},{"line":34},{"line":35},{"line":36},{"line":37},{"line":38},{"line":39},{"line":40},{"line":41},{"line":42}],"fileName":"DeliveryAttributes.swift","type":"file"},"doc://activitykit.HIGActivityKit/tutorials/HIGActivityKit/02-Activity-Attributes#Designing-Data-Structure":{"url":"\/tutorials\/higactivitykit\/02-activity-attributes#Designing-Data-Structure","identifier":"doc:\/\/activitykit.HIGActivityKit\/tutorials\/HIGActivityKit\/02-Activity-Attributes#Designing-Data-Structure","kind":"section","