,"let receivedData = combined","","\/\/ 복원 및 복호화","do {","    let restoredBox = try AES.GCM.SealedBox(combined: receivedData)","    let decrypted = try AES.GCM.open(restoredBox, using: key)","    print(\"복원: \\(String(data: decrypted, encoding: .utf8)!)\")","} catch {","    print(\"복원 실패: \\(error)\")","}"],"syntax":"swift","highlights":[{"line":4},{"line":6},{"line":8},{"line":9},{"line":10},{"line":12},{"line":13},{"line":15},{"line":16},{"line":17},{"line":18},{"line":19},{"line":20},{"line":21}],"fileName":"SealedBox.swift","type":"file","fileType":"swift"},"doc://cryptokit.HIGCryptoKit/tutorials/HIGCryptoKit/02-Hashing#Generating-SHA256-Hashes":{"title":"Generating SHA256 Hashes","identifier":"doc:\/\/cryptokit.HIGCryptoKit\/tutorials\/HIGCryptoKit\/02-Hashing#Generating-SHA256-Hashes","url":"\/tutorials\/higcryptokit\/02-hashing#Generating-SHA256-Hashes","role":"pseudoSymbol","kind":"section","abstract":[{"type":"text","text":"Generate unique fingerprints of data using SHA256 and SHA512."},{"text":" ","type":"text"},{"text":"Hashing is the foundation of data integrity verification and password storage.","type":"text"}],"type":"section"},"doc://cryptokit.HIGCryptoKit/tutorials/HIGCryptoKit/10-Architecture#Completing-the-Encrypted-Messaging-App":{"type":"section","identifier":"doc:\/\/cryptokit.HIGCryptoKit\/tutorials\/HIGCryptoKit\/10-Architecture#Completing-the-Encrypted-Messaging-App","title":"Completing the Encrypted Messaging App","abstract":[{"type":"text","text":"Integrate everything you’ve learned to design a complete encrypted messaging app."},{"type":"text","text":" "},{"type":"text","text":"Implement a production-ready security architecture."}],"role":"pseudoSymbol","kind":"section","url":"\/tutorials\/higcryptokit\/10-architecture#Completing-the-Encrypted-Messaging-App"},"doc://cryptokit.HIGCryptoKit/tutorials/HIGCryptoKit/02-Hashing":{"url":"\/tutorials\/higcryptokit\/02-hashing","identifier":"doc:\/\/cryptokit.HIGCryptoKit\/tutorials\/HIGCryptoKit\