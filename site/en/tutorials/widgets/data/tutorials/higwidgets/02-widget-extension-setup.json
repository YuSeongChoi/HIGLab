ntWeatherEntry: TimelineEntry {","    let date: Date","    let weather: WeatherData","}","","\/\/ MARK: - Timeline Provider","struct CurrentWeatherProvider: TimelineProvider {","    func placeholder(in context: Context) -> CurrentWeatherEntry {","        CurrentWeatherEntry(date: .now, weather: .preview)","    }","    ","    func getSnapshot(in context: Context, completion: @escaping (CurrentWeatherEntry) -> Void) {","        completion(CurrentWeatherEntry(date: .now, weather: .preview))","    }","    ","    func getTimeline(in context: Context, completion: @escaping (Timeline<CurrentWeatherEntry>) -> Void) {","        let entry = CurrentWeatherEntry(date: .now, weather: .preview)","        let timeline = Timeline(entries: [entry], policy: .after(.now.addingTimeInterval(900)))","        completion(timeline)","    }","}","","\/\/ MARK: - Widget View","struct WeatherWidgetEntryView: View {","    let entry: CurrentWeatherEntry","    ","    var body: some View {","        Text(\"날씨 위젯\")","    }","}","","\/\/ MARK: - Widget Configuration","struct WeatherWidget: Widget {","    let kind = \"WeatherWidget\"","    ","    var body: some WidgetConfiguration {","        StaticConfiguration(kind: kind, provider: CurrentWeatherProvider()) { entry in","            WeatherWidgetEntryView(entry: entry)","        }","        .configurationDisplayName(\"날씨\")","        .description(\"현재 날씨와 예보를 확인하세요.\")","        .supportedFamilies([.systemSmall, .systemMedium, .systemLarge])","    }","}"],"syntax":"swift","highlights":[],"fileName":"WeatherWidget.swift","identifier":"02-widget-skeleton.swift","type":"file","fileType":"swift"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/01-Understanding-HIG-Widgets#Check-Your-Understanding":{"titleInlineContent":[{"type":"text","text":"Check Your Understanding"}],"title":"Check Your Understanding","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/01-Understanding-HIG-Widgets#Check-Your-Understanding","url":"\/tutorials\/higwidgets\/01-understanding-hig-widgets#Check-Your-Understanding","type":"link"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/02-Widget-Extension-Setup#Project-Preparation":{"kind":"section","url":"\/tutorials\/higwidgets\/02-widget-extension-setup#Project-Preparation","abstract":[{"type":"text","text":"Add a Widget Extension to your Xcode project and"},{"type":"text","text":" "},{"type":"text","text":"understand the core architecture of WidgetKit."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/02-Widget-Extension-Setup#Project-Preparation","title":"Project Preparation","type":"section","role":"pseudoSymbol"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/01-Understanding-HIG-Widgets":{"url":"\/tutorials\/higwidgets\/01-understanding-hig-widgets","kind":"project","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/01-Understanding-HIG-Widgets","estimatedTime":"10min","role":"project","type":"topic","title":"Understanding HIG Widget Guidelines","abstract":[{"type":"text","text":"Learn what Apple defines as a “good widget” and"},{"type":"text","text":" "},{"type":"text","text":"the 3 core principles of HIG."}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/02-Widget-Extension-Setup#Understanding-TimelineProvider":{"title":"Understanding TimelineProvider","type":"section","url":"\/tutorials\/higwidgets\/02-widget-extension-setup#Understanding-TimelineProvider","kind":"section","role":"pseudoSymbol","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/02-Widget-Extension-Setup#Understanding-TimelineProvider","abstract":[{"text":"Add a Widget Extension to your Xcode project and","type":"text"},{"type":"text","text":" "},{"type":"text","text":"understand the core architecture of WidgetKit."}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/08-Interactive-Button#App-Intent-Based-Buttons":{"type":"section","role":"pseudoSymbol","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/08-Interactive-Button#App-Intent-Based-Buttons","title":"App Intent-Based Buttons","abstract":[{"type":"text","text":"Use iOS 17’s Button(intent:) to execute actions"},{"type":"text","text":" "},{"type":"text","text":"directly from the widget without opening the app."}],"kind":"section","url":"\/tutorials\/higwidgets\/08-interactive-button#App-Intent-Based-Buttons"},"02-entry.swift":{"content":["import WidgetKit","","\/\/ MARK: - Timeline Entry","\/\/ TimelineEntry 프로토콜은 반드시 date 프로퍼티가 필요합니다.","\/\/ 시스템은 이 date를 기준으로 적절한 시점에 위젯을 렌더링합니다.","","struct CurrentWeatherEntry: TimelineEntry {","    \/\/\/ 이 엔트리가 표시되어야 하는 시점","    let date: Date","    ","    \/\/\/ 위젯에 표시할 날씨 데이터","    let weather: WeatherData","    ","    \/\/\/ 위젯 설정에서 선택한 도시 (Configuration용)","    let configuration: SelectCityIntent?","    ","    init(date: Date, weather: WeatherData, configuration: SelectCityIntent? = nil) {","        self.date = date","        self.weather = weather","        self.configuration = configuration","    }","}"],"syntax":"swift","highlights":[],"fileName":"WeatherProvider.swift","identifier":"02-entry.swift","type":"file","fileType":"swift"},"02-placeholder.swift":{"syntax":"swift","fileType":"swift","fileName":"WeatherProvider.swift","highlights":[{"line":2},{"line":4},{"line":6},{"line":7},{"line":8},{"line":9},{"line":10},{"line":11},{"line":12},{"line":13},{"line":14},{"line":16},{"line":17},{"line":18},{"line":19},{"line":20},{"line":21},{"line":22},{"line":23},{"line":24},{"line":25},{"line":26},{"line":27},{"line":28},{"line":29},{"line":30},{"line":32},{"line":33},{"line":34}],"content":["import WidgetKit","import SwiftUI","","struct CurrentWeatherProvider: TimelineProvider {","    ","    \/\/ MARK: - Placeholder","    \/\/ 위젯 갤러리에서 미리보기로 표시됩니다.","    \/\/ HIG: 로딩 스피너 대신 실제 형태의 샘플 데이터를 보여주세요.","    func placeholder(in context: Context) -> CurrentWeatherEntry {","        CurrentWeatherEntry(","            date: .now,","            weather: .preview","        )","    }","    ","    \/\/ MARK: - Snapshot","    \/\/ 위젯 추가 시 보여지는 스냅샷입니다.","    \/\/ context.isPreview가 true면 빠르게 미리보기 데이터를 반환하세요.","    func getSnapshot(in context: Context, completion: @escaping (CurrentWeatherEntry) -> Void) {","        if context.isPreview {","            \/\/ 미리보기에서는 샘플 데이터 사용","            completion(CurrentWeatherEntry(date: .now, weather: .preview))","        } else {","            \/\/ 실제 위젯에서는 최신 데이터 가져오기","            Task {","                let weather = await WeatherService.shared.fetchWeather()","                completion(CurrentWeatherEntry(date: .now, weather: weather))","            }","        }","    }","    ","    \/\/ MARK: - Timeline","    func getTimeline(in context: Context, completion: @escaping (Timeline<CurrentWeatherEntry>) -> Void) {","        \/\/ 다음 단계에서 구현합니다","    }","}"],"identifier":"02-placeholder.swift","type":"file"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/01-Understanding-HIG-Widgets#The-Essence-of-Widgets":{"url":"\/tutorials\/higwidgets\/01-understanding-hig-widgets#The-Essence-of-Widgets","role":"pseudoSymbol","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/01-Understanding-HIG-Widgets#The-Essence-of-Widgets","abstract":[{"text":"Learn what Apple defines as a “good widget” and","type":"text"},{"text":" ","type":"text"},{"text":"the 3 core principles of HIG.","type":"text"}],"title":"The Essence of Widgets","kind":"section","type":"section"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/08-Interactive-Button":{"kind":"project","url":"\/tutorials\/higwidgets\/08-interactive-button","abstract":[{"type":"text","text":"Use iOS 17’s Button(intent:) to execute actions"},{"type":"text","text":" "},{"type":"text","text":"directly from the widget without opening the app."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/08-Interactive-Button","title":"Interactive Widget Buttons","type":"topic","role":"project","estimatedTime":"10min"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/02-Widget-Extension-Setup":{"url":"\/tutorials\/higwidgets\/02-widget-extension-setup","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/02-Widget-Extension-Setup","kind":"project","estimatedTime":"15min","role":"project","type":"topic","title":"Widget Extension Setup","abstract":[{"type":"text","text":"Add a Widget Extension to your Xcode project and"},{"type":"text","text":" "},{"type":"text","text":"understand the core architecture of WidgetKit."}]},"02-weather-data.swift":{"content":["import Foundation","","\/\/ MARK: - 날씨 데이터 모델","struct WeatherData {","    let cityName: String","    let temperature: Int","    let highTemperature: Int","    let lowTemperature: Int","    let condition: WeatherCondition","    let humidity: Int","    let windSpeed: Double","    let hourlyForecast: [HourlyWeather]","}","","\/\/ MARK: - 날씨 조건","enum WeatherCondition: String, CaseIterable {","    case sunny = \"맑음\"","    case cloudy = \"흐림\"","    case rainy = \"비\"","    case snowy = \"눈\"","    case stormy = \"뇌우\"","    ","    var symbol: String {","        switch self {","        case .sunny: \"sun.max.fill\"","        case .cloudy: \"cloud.fill\"","        case .rainy: \"cloud.rain.fill\"","        case .snowy: \"cloud.snow.fill\"","        case .stormy: \"cloud.bolt.rain.fill\"","        }","    }","}","","\/\/ MARK: - 시간별 날씨","struct HourlyWeather: Identifiable {","    let id = UUID()","    let hour: String","    let temperature: Int","    let condition: WeatherCondition","}","","\/\/ MARK: - 주간 날씨","struct DailyWeather: Identifiable {","    let id = UUID()","    let day: String","    let highTemperature: Int","    let lowTemperature: Int","    let condition: WeatherCondition","}"],"syntax":"swift","highlights":[],"fileName":"WeatherData.swift","identifier":"02-weather-data.swift","type":"file","fileType":"swift"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/10-Lock-Screen-Widget":{"url":"\/tutorials\/higwidgets\/10-lock-screen-widget","kind":"project","identifier":"doc:\/\/widgets.HIGWidgets\/tutori