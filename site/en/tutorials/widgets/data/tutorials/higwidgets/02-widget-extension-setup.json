    var body: some View {","        VStack(spacing: 20) {","            Image(systemName: \"sun.max.fill\")","                .font(.system(size: 60))","                .symbolRenderingMode(.multicolor)","            ","            Text(\"날씨 위젯 앱\")","                .font(.title)","                .fontWeight(.bold)","            ","            Text(\"홈 화면에서 위젯을 추가하세요\")","                .foregroundStyle(.secondary)","        }","    }","}"],"syntax":"swift","highlights":[],"fileName":"WeatherWidgetApp.swift","identifier":"02-app-entry.swift","type":"file","fileType":"swift"},"doc://widgets.HIGWidgets/tutorials/Table-of-Contents/Ring-1:-HIG-Guidelines":{"type":"topic","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/Table-of-Contents\/Ring-1:-HIG-Guidelines","kind":"article","abstract":[],"title":"Ring 1: HIG Guidelines","url":"\/tutorials\/table-of-contents\/ring-1:-hig-guidelines","role":"article"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/09-City-Configuration#WidgetConfigurationIntent":{"kind":"section","role":"pseudoSymbol","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/09-City-Configuration#WidgetConfigurationIntent","type":"section","abstract":[{"text":"Let users select which city’s weather to display","type":"text"},{"text":" ","type":"text"},{"text":"using App Intent Configuration.","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"Implement HIG’s “Personalized” principle."}],"title":"WidgetConfigurationIntent","url":"\/tutorials\/higwidgets\/09-city-configuration#WidgetConfigurationIntent"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/09-City-Configuration":{"url":"\/tutorials\/higwidgets\/09-city-configuration","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/09-City-Configuration","kind":"project","estimatedTime":"15min","role":"project","type":"topic","title":"City Selection Configuration","abstract":[{"type":"text","text":"Let users select which city’s weather to display"},{"type":"text","text":" "},{"type":"text","text":"using App Intent Configuration."},{"type":"text","text":" "},{"type":"text","text":"Implement HIG’s “Personalized” principle."}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/06-Weather-Gradient#Condition-Based-Gradients":{"type":"section","role":"pseudoSymbol","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/06-Weather-Gradient#Condition-Based-Gradients","title":"Condition-Based Gradients","abstract":[{"type":"text","text":"Use HIG’s containerBackground to make widget backgrounds"},{"type":"text","text":" "},{"type":"text","text":"automatically change based on weather conditions."}],"kind":"section","url":"\/tutorials\/higwidgets\/06-weather-gradient#Condition-Based-Gradients"},"02-timeline.swift":{"identifier":"02-timeline.swift","syntax":"swift","fileName":"WeatherProvider.swift","type":"file","content":["import WidgetKit","import SwiftUI","","struct CurrentWeatherProvider: TimelineProvider {","    ","    func placeholder(in context: Context) -> CurrentWeatherEntry {","        CurrentWeatherEntry(date: .now, weather: .preview)","    }","    ","    func getSnapshot(in context: Context, completion: @escaping (CurrentWeatherEntry) -> Void) {","        completion(CurrentWeatherEntry(date: .now, weather: .preview))","    }","    ","    \/\/ MARK: - Timeline 생성","    \/\/ 시스템에 타임라인을 제공하면, 시스템이 적절한 시점에 위젯을 업데이트합니다.","    func getTimeline(in context: Context, completion: @escaping (Timeline<CurrentWeatherEntry>) -> Void) {","        Task {","            \/\/ 1. 날씨 데이터 가져오기","            let weather = await WeatherService.shared.fetchWeather()","            ","            \/\/ 2. 현재 시점의 엔트리 생성","            let entry = CurrentWeatherEntry(date: .now, weather: weather)","            ","            \/\/ 3. 다음 갱신 시점 계산 (15분 후)","            let nextUpdate = Calendar.current.date(","                byAdding: .minute,","                value: 15,","                to: .now","            )!","            ","            \/\/ 4. 타임라인 생성","            \/\/ policy: .after(nextUpdate) — 지정 시점 이후 갱신","            \/\/ policy: .atEnd — 마지막 엔트리 후 갱신","            \/\/ policy: .never — 앱에서 직접 갱신 요청 전까지 대기","            let timeline = Timeline(","                entries: [entry],","                policy: .after(nextUpdate)","            )","            ","            completion(timeline)","        }","    }","}"],"fileType":"swift","highlights":[{"line":7},{"line":11},{"line":14},{"line":15},{"line":17},{"line":18},{"line":19},{"line":20},{"line":21},{"line":22},{"line":23},{"line":24},{"line":25},{"line":26},{"line":27},{"line":28},{"line":29},{"line":30},{"line":31},{"line":32},{"line":33},{"line":34},{"line":35},{"line":36},{"line":37},{"line":38},{"line":39},{"line":40},{"line":41}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/04-Small-Widget-View#Small-Widget-Layout":{"type":"section","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/04-Small-Widget-View#Small-Widget-Layout","kind":"section","abstract":[{"type":"text","text":"Build a Small widget applying HIG’s “glanceable” principle."},{"type":"text","text":" "},{"text":"Create a content-focused layout with 4 or fewer pieces of information.","type":"text"}],"title":"Small Widget Layout","url":"\/tutorials\/higwidgets\/04-small-widget-view#Small-Widget-Layout","role":"pseudoSymbol"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/03-Timeline-Provider":{"url":"\/tutorials\/higwidgets\/03-timeline-provider","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/03-Timeline-Provider","kind":"project","estimatedTime":"10min","role":"project","type":"topic","title":"Implementing TimelineProvider","abstract":[{"type":"text","text":"Complete the Provider that fetches weather data and generates timelines."}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/01-Understanding-HIG-Widgets#Design-Strategy-by-Size":{"url":"\/tutorials\/higwidgets\/01-understanding-hig-widgets#Design-Strategy-by-Size","identifier":"doc:\/\/widgets.H