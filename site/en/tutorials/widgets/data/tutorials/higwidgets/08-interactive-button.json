,"schemaVersion":{"minor":3,"major":0,"patch":0},"identifier":{"url":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/08-Interactive-Button","interfaceLanguage":"swift"},"metadata":{"category":"HIG Weather Widget Challenge","categoryPathComponent":"Table-of-Contents","role":"project","title":"Interactive Widget Buttons"},"sections":[{"chapter":"Ring 4: Data & Interaction","title":"Interactive Widget Buttons","kind":"hero","content":[{"type":"paragraph","inlineContent":[{"text":"Use iOS 17’s Button(intent:) to execute actions","type":"text"},{"type":"text","text":" "},{"text":"directly from the widget without opening the app.","type":"text"}]}],"estimatedTimeInMinutes":10},{"tasks":[{"title":"App Intent-Based Buttons","stepsSection":[{"type":"step","caption":[],"media":null,"content":[{"inlineContent":[{"type":"text","text":"Implement RefreshWeatherIntent."},{"text":" ","type":"text"},{"text":"A simple Intent that forces a timeline refresh.","type":"text"}],"type":"paragraph"}],"code":"08-refresh-intent.swift","runtimePreview":null},{"code":"08-interactive-view.swift","type":"step","runtimePreview":null,"caption":[{"type":"paragraph","inlineContent":[{"type":"text","text":"HIG Tip: Don’t add interactive elements to Small widgets."},{"type":"text","text":" "},{"text":"The space is too limited for accurate tapping.","type":"text"}]}],"content":[{"inlineContent":[{"type":"text","text":"Add a refresh button to the widget view."},{"type":"text","text":" "},{"type":"text","text":"Place it as a small button in the corner of the Large widget."}],"type":"paragraph"}],"media":null}],"anchor":"App-Intent-Based-Buttons","contentSection":[{"mediaPosition":"trailing","kind":"contentAndMedia","content":[{"inlineContent":[{"text":"Starting with iOS 17, you can add ","type":"text"},{"code":"Button","type":"codeVoice"},{"text":" and ","type":"text"},{"code":"Toggle","type":"codeVoice"},{"text":" to widgets.","type":"text"},{"text":" ","type":"text"},{"text":"However, they only work through ","type":"text"},{"type":"strong","inlineContent":[{"text":"App Intents","type":"text"}]},{"text":", not regular closures.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"HIG: Only add interactive elements when they have a clear purpose.","type":"text"},{"text":" ","type":"text"},{"text":"A “refresh” button is a good example.","type":"text"}],"type":"paragraph"}]}]}],"kind":"tasks"},{"kind":"callToAction","abstract":[{"type":"text","text":"Let users select which city’s weather to display"},{"type":"text","text":" "},{"type":"text","text":"using App Intent Configuration."},{"text":" ","type":"text"},{"text":"Implement HIG’s “Personalized” principle.","type":"text"}],"action":{"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/09-City-Configuration","type":"reference","isActive":true,"overridingTitle":"Get started","overridingTitleInlineContent":[{"text":"Get started","type":"text"}]},"featuredEyebrow":"Tutorial","title":"City Selection Configuration"}],"variants":[{"paths":["\/tutorials\/higwidgets\/08-interactive-button"],"traits":[{"interfaceLanguage":"swift"}]}],"references":{"doc://widgets.HIGWidgets/tutorials/HIGWidgets/05-Medium-Large-Views":{"url":"\/tutorials\/higwidgets\/05-medium-large-views","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/05-Medium-Large-Views","kind":"project","estimatedTime":"20min","role":"project","type":"topic","title":"Medium & Large Widget Views","abstract":[{"type":"text","text":"Varying information density and layout by size is key to HIG."},{"type":"text","text":" "},{"type":"text","text":"Add hourly forecasts to Medium and weekly forecasts to Large."}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/01-Understanding-HIG-Widgets#Design-Strategy-by-Size":{"url":"\/tutorials\/higwidgets\/01-understanding-hig-widgets#Design-Strategy-by-Size","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/01-Understanding-HIG-Widgets#Design-Strategy-by-Size","kind":"section","role":"pseudoSymbol","type":"section","title":"Design Strategy by Size","abstract":[{"type":"text","text":"Learn what Apple defines as a “good widget” and"},{"text":" ","type":"text"},{"text":"the 3 core principles of HIG.","type":"text"}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/06-Weather-Gradient":{"url":"\/tutorials\/higwidgets\/06-weather-gradient","kind":"project","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/06-Weather-Gradient","role":"project","type":"topic","title":"Weather-Based Gradient Backgrounds","abstract":[{"text":"Use HIG’s containerBackground to make widget backgrounds","type":"text"},{"type":"text","text":" "},{"type":"text","text":"automatically change based on weather conditions."}],"estimatedTime":"10min"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/03-Timeline-Provider#Async-Data-Loading":{"kind":"section","url":"\/tutorials\/higwidgets\/03-timeline-provider#Async-Data-Loading","abstract":[{"type":"text","text":"Complete the Provider that fetches weather data and generates timelines."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/03-Timeline-Provider#Async-Data-Loading","title":"Async Data Loading","type":"section","role":"pseudoSymbol"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/05-Medium-Large-Views#Large-Widget":{"kind":"section","url":"\/tutorials\/higwidgets\/05-medium-large-views#Large-Widget","abstract":[{"type":"text","text":"Varying information density and layout by size is key to HIG."},{"type":"text","text":" "},{"type":"text","text":"Add hourly forecasts to Medium and weekly forecasts to Large."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/05-Medium-Large-Views#Large-Widget","title":"Large Widget","type":"section","role":"pseudoSymbol"},"08-refresh-intent.swift":{"content":["import AppIntents","import WidgetKit","","\/\/ MARK: - Refresh Weather Intent","\/\/ iOS 17+ 인터랙티브 위젯을 위한 App Intent입니다.","\/\/ 버튼을 탭하면 타임라인을 강제 갱신합니다.","","struct RefreshWeatherIntent: AppIntent {","    static var title: LocalizedStringResource = \"날씨 새로고침\"","    static var description = IntentDescription(\"위젯의 날씨 데이터를 새로고침합니다.\")","    ","    func perform() async throws -> some IntentResult {","        \/\/ 모든 위젯 타임라인 갱신 요청","        WidgetCenter.shared.reloadAllTimelines()","        ","        \/\/ 또는 특정 위젯만 갱신:","        \/\/ WidgetCenter.shared.reloadTimelines(ofKind: \"WeatherWidget\")","        ","        return .result()","    }","}","","\/\/ MARK: - Open App Intent","\/\/ 위젯에서 앱을 열면서 특정 화면으로 이동하는 Intent","","struct OpenWeatherDetailIntent: AppIntent {","    static var title: LocalizedStringResource = \"날씨 상세 보기\"","    static var description = IntentDescription(\"앱을 열어 상세 날씨 정보를 확인합니다.\")","    ","    \/\/\/ 어떤 도시 상세 화면을 열지","    @Parameter(title: \"도시\")","    var city: CityOption","    ","    \/\/\/ 앱을 포그라운드로 전환","    static var openAppWhenRun: Bool = true","    ","    func perform() async throws -> some IntentResult {","        \/\/ 앱에서 UserDefaults로 받아 처리","        UserDefaults(suiteName: \"group.com.example.weatherwidget\")?","            .set(city.rawValue, forKey: \"selectedCity\")","        ","        return .result()","    }","}","","\/\/ MARK: - Toggle Favorite Intent","\/\/ Toggle을 위한 Intent 예시","","struct ToggleFavoriteIntent: AppIntent {","    static var title: LocalizedStringResource = \"즐겨찾기 토글\"","    ","    @Parameter(title: \"도시\")","    var city: CityOption","    ","    func perform() async throws -> some IntentResult {","        \/\/ 즐겨찾기 상태 토글","        let defaults = UserDefaults(suiteName: \"group.com.example.weatherwidget\")","        let key = \"favorite_\\(city.rawValue)\"","        let current = defaults?.bool(forKey: key) ?? false","        defaults?.set(!current, forKey: key)","        ","        \/\/ 위젯 갱신","        WidgetCenter.shared.reloadAllTimelines()","        ","        return .result()","    }","}"],"type":"file","syntax":"swift","identifier":"08-refresh-intent.swift","highlights":[],"fileName":"RefreshWeatherIntent.swift","fileType":"swift"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/09-City-Configuration":{"url":"\/tutorials\/higwidgets\/09-city-configuration","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/09-City-Configuration","kind":"project","estimatedTime":"15min","role":"project","type":"topic","title":"City Selection Configuration","abstract":[{"type":"text","text":"Let users select which city’s weather to display"},{"type":"text","text":" "},{"type":"text","text":"using App Intent Configuration."},{"type":"text","text":" "},{"type":"text","text":"Implement HIG’s “Personalized” principle."}]},"doc://widgets.HIGWidgets/tutorials/Table-of-Contents/Ring-3:-HIG-Compliant-UI":{"abstract":[],"title":"Ring 3: HIG-Compliant UI","role":"article","url":"\/tutorials\/table-of-contents\/ring-3:-hig-compliant-ui","kind":"article","type":"topic","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/Table-of-Contents\/Ring-3:-HIG-Compliant-UI"},"doc://widgets.HIGWidgets/tutorials/Table-of-Contents":{"kind":"overview","url":"\/tutorials\/table-of-contents","abstract":[{"type":"text","text":"Following Apple Human Interface Guidelines’ widget design principles,"},{"type":"text","text":" "},{"type":"text","text":"create a fully functional interactive weather widget with SwiftUI."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/Table-of-Contents","title":"Build Your Own Weather Widget","type":"topic","role":"overview"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/05-Medium-Large-Views#Medium-Widget":{"abstract":[{"type":"text","text":"Varying information density and layout by size is key to HIG."},{"text":" ","type":"text"},{"type":"text","text":"Add hourly forecasts to Medium and weekly forecasts to Large."}],"title":"Medium Widget","role":"pseudoSymbol","url":"\/tutorials\/higwidgets\/05-medium-large-views#Medium-Widget","kind":"section","type":"section","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/05-Medium-Large-Views#Medium-Widget"},"doc://widgets.HIGWidgets/tutorials/Table-of-Contents/Ring-1:-HIG-Guidelines":{"type":"topic","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/Table-of-Contents\/Ring-1:-HIG-Guidelines","kind":"article","abstract":[],"title":"Ring 1: HIG Guidelines","url":"\/tutorials\/table-of-contents\/ring-1:-hig-guidelines","role":"article"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/08-Interactive-Button":{"kind":"project","url":"\/tutorials\/higwidgets\/08-interactive-button","abstract":[{"type":"text","text":"Use iOS 17’s Button(intent:) to execute actions"},{"type":"text","text":" "},{"type":"text","text":"directly from the widget without opening the app."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/08-Interactive-Button","title":"Interactive Widget Buttons","type":"topic","role":"project","estimatedTime":"10min"},"08-interactive-view.swift":{"type":"file","syntax":"swift","fileName":"LargeWeatherView.swift","content":["import SwiftUI","import WidgetKit","","\/\/ MARK: - Large Widget with Interactive Button","\/\/ HIG: 인터랙티브 요소는 명확한 목적이 있을 때만 추가하세요.","\/\/ Small 위젯에는 넣지 마세요 — 공간이 작아 탭 정확도가 떨어집니다.","","struct LargeWeatherView: View {","    let weather: WeatherData","    ","    var body: some View {","        VStack(alignment: .leading, spacing: 16) {","            \/\/ MARK: 헤더 - 현재 날씨 + 새로고침 버튼","            HStack(alignment: .top) {","                VStack(alignment: .leading, spacing: 2) {","                    Text(weather.cityName)","                        .font(.title3)","                        .fontWeight(.semibold)","                    ","                    Text(\"\\(weather.temperature)°\")","                        .font(.system(size: 54, weight: .thin, design: .rounded))","                }","                ","                Spacer()","                ","                VStack(alignment: .trailing, spacing: 8) {","                    Image(systemName: weather.condition.symbol)","                        .font(.largeTitle)","                        .symbolRenderingMode(.multicolor)","                    ","                    Text(weather.condition.rawValue)","                        .font(.callout)","                    ","                    \/\/ MARK: 새로고침 버튼","                    \/\/ Button(intent:)로 앱을 열지 않고 바로 실행","                    Button(intent: RefreshWeatherIntent()) {","                        HStack(spacing: 4) {","                            Image(systemName: \"arrow.clockwise\")","                            Text(\"새로고침\")","                        }","                        .font(.caption2)","                        .padding(.horizontal, 8)","                        .padding(.vertical, 4)","                        .background(.ultraThinMaterial)","                        .clipShape(Capsule())","                    }","                    .buttonStyle(.plain)","                }","            }","            ","            Divider()","            ","            \/\/ MARK: 시간별 예보 (탭 가능한 영역)","            HStack(spacing: 0) {","                ForEach(Array(weather.hourlyForecast.prefix(6).enumerated()), id: \\.element.id) { index, hourly in","                    \/\/ 각 시간을 탭하면 해당 시간대 상세로 이동","                    Link(destination: URL(string: \"weatherapp:\/\/hour\/\\(index)\")!) {","                        VStack(spacing: 8) {","                            Text(index == 0 ? \"지금\" : hourly.hour)","                                .font(.caption2)","                                .foregroundStyle(index == 0 ? .primary : .secondary)","                            ","                            Image(systemName: hourly.condition.symbol)","                                .symbolRenderingMode(.multicolor)","                                .font(.title3)","                            ","                            Text(\"\\(hourly.temperature)°\")","                                .font(.subheadline)","                                .fontWeight(.medium)","                        }","                        .frame(maxWidth: .infinity)","                    }","                }","            }","            ","            Divider()","            ","            \/\/ MARK: 주간 예보","            VStack(spacing: 8) {","                ForEach(WeatherData.previewDaily.prefix(4)) { daily in","                    HStack {","                        Text(daily.day)","                            .font(.subheadline)","                            .frame(width: 40, alignment: .leading)","                        ","                        Image(systemName: daily.condition.symbol)","                            .symbolRenderingMode(.multicolor)","                            .font(.body)","                        ","                        Spacer()","                        ","                        Text(\"\\(daily.lowTemperature)°\")","                            .foregroundStyle(.secondary)","                        Text(\"\\(daily.highTemperature)°\")","                    }","                    .font(.caption)","                }","            }","        }","    }","}","","\/\/ MARK: - Medium Widget with Toggle","struct MediumWeatherWithFavorite: View {","    let weather: WeatherData","    let isFavorite: Bool","    ","    var body: some View {","        HStack {","            \/\/ 날씨 정보","            VStack(alignment: .leading) {","                Text(weather.cityName)","                    .font(.headline)","                Text(\"\\(weather.temperature)°\")","                    .font(.largeTitle)","            }","            ","            Spacer()","            ","            \/\/ 즐겨찾기 토글","            Toggle(isOn: isFavorite, intent: ToggleFavoriteIntent(city: .seoul)) {","                Image(systemName: isFavorite ? \"star.fill\" : \"star\")","                    .foregroundStyle(isFavorite ? .yellow : .gray)","            }","            .toggleStyle(.button)","            .buttonStyle(.plain)","        }","    }","}"],"highlights":[],"fileType":"swift","identifier":"08-interactive-view.swift"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/04-Small-Widget-View#Small-Widget-Layout":{"type":"section","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/04-Small-Widget-View#Small-Widget-Layout","kind":"section","abstract":[{"type":"text","text":"Build a Small widget applying HIG’s “glanceable” principle."},{"type":"text","text":" "},{"text":"Create a content-focused layout with 4 or fewer pieces of information.","type":"text"}],"title":"Small Widget Layout","url":"\/tutorials\/higwidgets\/04-small-widget-view#Small-Widget-Layout","role":"pseudoSymbol"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/10-Lock-Screen-Widget#Lock-Screen-Widget-Families":{"title":"Lock Screen Widget Families","url":"\/tutorials\/higwidgets\/10-lock-screen-widget#Lock-Screen-Widget-Families","kind":"section","type":"section","role":"pseudoSymbol","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/10-Lock-Screen-Widget#Lock-Screen-Widget-Families","abstract":[{"type":"text","text":"Check weather on the Lock Screen and StandBy with"},{"type":"text","text":" "},{"type":"text","text":"accessoryCircular, accessoryRectangular, and accessoryInline sizes."}]},"doc://widgets.HIGWidgets/tutorials/Table-of-Contents/Ring-4:-Data-&-Interaction":{"title":"Ring 4: Data & Interaction","url":"\/tutorials\/table-of-contents\/ring-4:-data-&-interaction","type":"topic","kind":"article","role":"article","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/Table-of-Contents\/Ring-4:-Data-&-Interaction","abstract":[]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/10-Lock-Screen-Widget":{"url":"\/tutorials\/higwidgets\/10-lock-screen-widget","kind":"project","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/10-Lock-Screen-Widget","estimatedTime":"15min","role":"project","type":"topic","title":"Lock Screen Widgets","abstract":[{"type":"text","text":"Check weather on the Lock Screen and StandBy w