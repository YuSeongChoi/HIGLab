ing","abstract":[{"type":"text","text":"Complete the Provider that fetches weather data and generates timelines."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/03-Timeline-Provider#Async-Data-Loading","title":"Async Data Loading","type":"section","role":"pseudoSymbol"},"06-container-bg.swift":{"type":"file","syntax":"swift","fileName":"WeatherWidget.swift","content":["import WidgetKit","import SwiftUI","","\/\/ MARK: - Widget with Container Background","\/\/ iOS 17+ containerBackground modifier로 배경 처리","\/\/ 시스템이 다크모드, 틴트를 자동으로 처리합니다.","","struct WeatherWidget: Widget {","    let kind = \"WeatherWidget\"","    ","    var body: some WidgetConfiguration {","        AppIntentConfiguration(","            kind: kind,","            intent: SelectCityIntent.self,","            provider: CurrentWeatherProvider()","        ) { entry in","            WeatherWidgetEntryView(entry: entry)","                \/\/ HIG: containerBackground로 배경 처리","                \/\/ 이전의 padding + background 방식보다 권장됨","                .containerBackground(for: .widget) {","                    entry.weather.condition.gradient","                }","        }","        .configurationDisplayName(\"날씨\")","        .description(\"현재 날씨와 예보를 확인하세요.\")","        .supportedFamilies([","            .systemSmall,","            .systemMedium,","            .systemLarge,","            .accessoryCircular,","            .accessoryRectangular,","            .accessoryInline","        ])","    }","}","","\/\/ MARK: - Entry View with Family Switching","struct WeatherWidgetEntryView: View {","    @Environment(\\.widgetFamily) var family","    let entry: CurrentWeatherEntry","    ","    var body: some View {","        switch family {","        case .systemSmall:","            SmallWeatherView(weather: entry.weather)","        case .systemMedium:","            MediumWeatherView(weather: entry.weather)","        case .systemLarge:","            LargeWeatherView(weather: entry.weather)","        case .accessoryCircular:","            CircularWeatherView(weather: entry.weather)","        case .accessoryRectangular:","            RectangularWeatherView(weather: entry.weather)","        case .accessoryInline:","            InlineWeatherView(weather: entry.weather)","        @unknown default:","            SmallWeatherView(weather: entry.weather)","        }","    }","}"],"highlights":[],"fileType":"swift","identifier":"06-container-bg.swift"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/07-Weather-Service#Implementing-WeatherService":{"title":"Implementing WeatherService","type":"section","url":"\/tutorials\/higwidgets\/07-weather-service#Implementing-WeatherService","kind":"section","role":"pseudoSymbol","abstract":[{"type":"text","text":"Fetch real weather information using WeatherKit API or Mock data."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/07-Weather-Service#Implementing-WeatherService"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/02-Widget-Extension-Setup#Understanding-TimelineProvider":{"title":"Understanding TimelineProvider","type":"section","url":"\/tutorials\/higwidgets\/02-widget-extension-setup#Understanding-TimelineProvider","kind":"section","role":"pseudoSymbol","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/02-Widget-Extension-Setup#Understanding-TimelineProvider","abstract":[{"text":"Add a Widget Extension to your Xcode project and","type":"text"},{"type":"text","text":" "},{"type":"text","text":"understand the core architecture of WidgetKit."}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/07-Weather-Service":{"kind":"project","url":"\/tutorials\/higwidgets\/07-weather-service","abstract":[{"text":"Fetch real weather information using WeatherKit API or Mock data.","type":"text"}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/07-Weather-Service","title":"Weather Data Service","type":"topic","role":"project","estimatedTime":"15min"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/01-Understanding-HIG-Widgets#Check-Your-Understanding":{"title":"Check Your Understanding","titleInlineContent":[{"type":"text","text":"Check Your Understanding"}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/01-Understanding-HIG-Widgets#Check-Your-Understanding","url":"\/tutorials\/higwidgets\/01-understanding-hig-widgets#Check-Your-Understanding","type":"link"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/04-Small-Widget-View#Check-Your-Understanding":{"url":"\/tutorials\/higwidgets\/04-small-widget-view#Check-Your-Understanding","titleInlineContent":[{"text":"Check Your Understanding","type":"text"}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/04-Small-Widget-View#Check-Your-Understanding","title":"Check Your Understanding","type":"link"},"06-gradient.swift":{"fileType":"swift","highlights":[],"fileName":"WeatherGradient.swift","identifier":"06-gradient.swift","syntax":"swift","type":"file","content":["import SwiftUI","","\/\/ MARK: - Weather Condition Gradients","\/\/ HIG: 위젯 배경으로 날씨 분위기를 전달합니다.","\/\/ 맑은 날은 따뜻한 톤, 비 오는 날은 차가운 톤으로.","","extension WeatherCondition {","    \/\/\/ 날씨 조건에 맞는 그래디언트 배경","    var gradient: LinearGradient {","        switch self {","        case .sunny:","            LinearGradient(","                colors: [","                    Color(red: 1.0, green: 0.75, blue: 0.3),   \/\/ 따뜻한 오렌지","                    Color(red: 1.0, green: 0.85, blue: 0.4)    \/\/ 밝은 옐로우","                ],","                startPoint: .topLeading,","                endPoint: .bottomTrailing","            )","            ","        case .cloudy:","            LinearGradient(","                colors: [","                    Color(red: 0.7, green: 0.75, blue: 0.8),   \/\/ 부드러운 그레이","                    Color(red: 0.85, green: 0.87, blue: 0.9)   \/\/ 밝은 그레이","                ],","                startPoint: .top,","                endPoint: .bottom","            )","            ","        case .rainy:","            LinearGradient(","                colors: [","                    Color(red: 0.4, green: 0.5, blue: 0.6),    \/\/ 어두운 그레이","                    Color(red: 0.5, green: 0.6, blue: 0.75)    \/\/ 블루 그레이","                ],","                startPoint: .topLeading,","                endPoint: .bottomTrailing","            )","            ","        case .snowy:","            LinearGradient(","                colors: [","                    Color(red: 0.9, green: 0.95, blue: 1.0),   \/\/ 거의 흰색","                    Color(red: 0.8, green: 0.9, blue: 0.98)    \/\/ 아이스 블루","                ],","                startPoint: .top,","                endPoint: .bottom","            )","            ","        case .stormy:","            LinearGradient(","                colors: [","                    Color(red: 0.2, green: 0.25, blue: 0.35),  \/\/ 어두운 네이비","                    Color(red: 0.35, green: 0.3, blue: 0.45)   \/\/ 폭풍 퍼플","                ],","                startPoint: .topLeading,","                endPoint: .bottomTrailing","            )","        }","    }","    ","    \/\/\/ 텍스트 색상 (배경에 따라 조정)","    var textColor: Color {","        switch self {","        case .sunny, .cloudy, .snowy:","            return .primary","        case .rainy, .stormy:","            return .white","        }","    }","    ","    \/\/\/ 보조 텍스트 색상","    var secondaryTextColor: Color {","        switch self {","        case .sunny, .cloudy, .snowy:","            return .secondary","        case .rainy, .stormy:","            return .white.opacity(0.8)","        }","    }","}"]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/05-Medium-Large-Views":{"url":"\/tutorials\/higwidgets\/05-medium-large-views","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/05-Medium-Large-Views","kind":"project","estimatedTime":"20min","role":"project","type":"topic","title":"Medium & Large Widget Views","abstract":[{"type":"text","text":"Varying information density and layout by size is key to HI