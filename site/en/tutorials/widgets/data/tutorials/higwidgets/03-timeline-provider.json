ject","schemaVersion":{"major":0,"patch":0,"minor":3},"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/03-Timeline-Provider"},"metadata":{"role":"project","title":"Implementing TimelineProvider","categoryPathComponent":"Table-of-Contents","category":"HIG Weather Widget Challenge"},"sections":[{"content":[{"type":"paragraph","inlineContent":[{"text":"Complete the Provider that fetches weather data and generates timelines.","type":"text"}]}],"title":"Implementing TimelineProvider","estimatedTimeInMinutes":10,"chapter":"Ring 2: Building the Foundation","kind":"hero"},{"kind":"tasks","tasks":[{"contentSection":[{"kind":"contentAndMedia","content":[{"inlineContent":[{"type":"text","text":"Fetch weather data using async\/await in "},{"type":"codeVoice","code":"getTimeline"},{"text":".","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"Understand timeline refresh policies (after, atEnd, never)."}],"type":"paragraph"}],"mediaPosition":"trailing"}],"title":"Async Data Loading","stepsSection":[{"caption":[],"code":"03-full-provider.swift","runtimePreview":null,"media":null,"type":"step","content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Fetch data asynchronously from WeatherService and"},{"text":" ","type":"text"},{"text":"set a 15-minute refresh policy.","type":"text"}]}]},{"type":"step","caption":[],"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Define preview sample data as a WeatherData extension."}]}],"code":"03-preview-data.swift","media":null,"runtimePreview":null}],"anchor":"Async-Data-Loading"}]},{"abstract":[{"type":"text","text":"Build a Small widget applying HIG’s “glanceable” principle."},{"type":"text","text":" "},{"text":"Create a content-focused layout with 4 or fewer pieces of information.","type":"text"}],"kind":"callToAction","title":"Creating the Small Widget View","action":{"isActive":true,"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/04-Small-Widget-View","overridingTitle":"Get started","type":"reference","overridingTitleInlineContent":[{"type":"text","text":"Get started"}]},"featuredEyebrow":"Tutorial"}],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/tutorials\/higwidgets\/03-timeline-provider"]}],"references":{"doc://widgets.HIGWidgets/tutorials/HIGWidgets/07-Weather-Service":{"kind":"project","url":"\/tutorials\/higwidgets\/07-weather-service","abstract":[{"text":"Fetch real weather information using WeatherKit API or Mock data.","type":"text"}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/07-Weather-Service","title":"Weather Data Service","type":"topic","role":"project","estimatedTime":"15min"},"03-preview-data.swift":{"type":"file","syntax":"swift","fileName":"WeatherData+Preview.swift","content":["import Foundation","","\/\/ MARK: - Preview Data","\/\/ 개발, 테스트, Xcode Preview에서 사용할 샘플 데이터입니다.","","extension WeatherData {","    \/\/\/ 기본 미리보기 데이터","    static let preview = WeatherData(","        cityName: \"서울\",","        temperature: 23,","        highTemperature: 27,","        lowTemperature: 18,","        condition: .sunny,","        humidity: 45,","        windSpeed: 3.2,","        hourlyForecast: previewHourly","    )","    ","    \/\/\/ 비 오는 날 미리보기","    static let rainyPreview = WeatherData(","        cityName: \"서울\",","        temperature: 18,","        highTemperature: 20,","        lowTemperature: 15,","        condition: .rainy,","        humidity: 85,","        windSpeed: 5.0,","        hourlyForecast: previewRainyHourly","    )","    ","    \/\/\/ 시간별 예보 샘플","    private static let previewHourly: [HourlyWeather] = [","        HourlyWeather(hour: \"지금\", temperature: 23, condition: .sunny),","        HourlyWeather(hour: \"14시\", temperature: 25, condition: .sunny),","        HourlyWeather(hour: \"15시\", temperature: 26, condition: .cloudy),","        HourlyWeather(hour: \"16시\", temperature: 27, condition: .cloudy),","        HourlyWeather(hour: \"17시\", temperature: 25, condition: .sunny),","        HourlyWeather(hour: \"18시\", temperature: 23, condition: .sunny),","    ]","    ","    private static let previewRainyHourly: [HourlyWeather] = [","        HourlyWeather(hour: \"지금\", temperature: 18, condition: .rainy),","        HourlyWeather(hour: \"14시\", temperature: 17, condition: .rainy),","        HourlyWeather(hour: \"15시\", temperature: 17, condition: .rainy),","        HourlyWeather(hour: \"16시\", temperature: 18, condition: .cloudy),","        HourlyWeather(hour: \"17시\", temperature: 19, condition: .cloudy),","        HourlyWeather(hour: \"18시\", temperature: 18, condition: .cloudy),","    ]","    ","    \/\/\/ 주간 예보 샘플","    static let previewDaily: [DailyWeather] = [","        DailyWeather(day: \"오늘\", highTemperature: 27, lowTemperature: 18, condition: .sunny),","        DailyWeather(day: \"내일\", highTemperature: 25, lowTemperature: 17, condition: .cloudy),","        DailyWeather(day: \"수\", highTemperature: 22, lowTemperature: 16, condition: .rainy),","        DailyWeather(day: \"목\", highTemperature: 24, lowTemperature: 17, condition: .cloudy),","        DailyWeather(day: \"금\", highTemperature: 26, lowTemperature: 18, condition: .sunny),","    ]","    ","    \/\/\/ 시간 이동 (타임라인용)","    func shifting(byHours hours: Int) -> WeatherData {","        guard hours < hourlyForecast.count else { return self }","        let shifted = hourlyForecast[hours]","        return WeatherData(","            cityName: cityName,","            temperature: shifted.temperature,","            highTemperature: highTemperature,","            lowTemperature: lowTemperature,","            condition: shifted.condition,","            humidity: humidity,","            windSpeed: windSpeed,","            hourlyForecast: Array(hourlyForecast.dropFirst(hours))","        )","    }","}"],"highlights":[],"fileType":"swift","identifier":"03-preview-data.swift"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/04-Small-Widget-View#Small-Widget-Layout":{"type":"section","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/04-Small-Widget-View#Small-Widget-Layout","kind":"section","abstract":[{"type":"text","text":"Build a Small widget applying HIG’s “glanceable” principle."},{"type":"text","text":" "},{"text":"Create a content-focused layout with 4 or fewer pieces of information.","type":"text"}],"title":"Small Widget Layout","url":"\/tutorials\/higwidgets\/04-small-widget-view#Small-Widget-Layout","role":"pseudoSymbol"},"doc://widgets.HIGWidgets/tutorials/Table-of-Contents/Ring-4:-Data-&-Interaction":{"title":"Ring 4: Data & Interaction","url":"\/tutorials\/table-of-contents\/ring-4:-data-&-interaction","type":"topic","kind":"article","role":"article","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/Table-of-Contents\/Ring-4:-Data-&-Interaction","abstract":[]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/10-Lock-Screen-Widget":{"url":"\/tutorials\/higwidgets\/10-lock-screen-widget","kind":"project","identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/10-Lock-Screen-Widget","estimatedTime":"15min","role":"project","type":"topic","title":"Lock Screen Widgets","abstract":[{"type":"text","text":"Check weather on the Lock Screen and StandBy with"},{"type":"text","text":" "},{"type":"text","text":"accessoryCircular, accessoryRectangular, and accessoryInline sizes."}]},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/05-Medium-Large-Views#Large-Widget":{"kind":"section","url":"\/tutorials\/higwidgets\/05-medium-large-views#Large-Widget","abstract":[{"type":"text","text":"Varying information density and layout by size is key to HIG."},{"type":"text","text":" "},{"type":"text","text":"Add hourly forecasts to Medium and weekly forecasts to Large."}],"identifier":"doc:\/\/widgets.HIGWidgets\/tutorials\/HIGWidgets\/05-Medium-Large-Views#Large-Widget","title":"Large Widget","type":"section","role":"pseudoSymbol"},"doc://widgets.HIGWidgets/tutorials/HIGWidgets/03-Tim