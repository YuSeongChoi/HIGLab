      HStack(alignment: .top, spacing: 4) {","                        Text(\"24\")","                            .font(.system(size: 52, weight: .bold))","                        Text(\"°\")","                            .font(.title)","                    }","                    Text(\"H:28° L:18°\")","                        .font(.caption)","                        .foregroundStyle(.secondary)","                }","            }","","            Divider()","","            \/\/ 중간: 시간별 예보","            VStack(alignment: .leading, spacing: 8) {","                Text(\"시간별 예보\")","                    .font(.caption.bold())","                    .foregroundStyle(.secondary)","","                HStack(spacing: 12) {","                    ForEach(hourlyForecasts) { forecast in","                        VStack(spacing: 6) {","                            Text(forecast.time)","                                .font(.caption)","                                .foregroundStyle(.secondary)","","                            Image(systemName: forecast.icon)","                                .font(.system(size: 20))","                                .symbolRenderingMode(.multicolor)","","                            Text(\"\\(forecast.temperature)°\")","                                .font(.caption.bold())","                        }","                    }","                }","            }","","            Divider()","","            \/\/ 하단: 주간 예보","            VStack(alignment: .leading, spacing: 8) {","                Text(\"주간 예보\")","                    .font(.caption.bold())","                    .foregroundStyle(.secondary)","","                VStack(spacing: 6) {","                    ForEach(weeklyForecasts) { forecast in","                        HStack {","                            Text(forecast.day)","                                .font(.subheadline)","                                .frame(width: 40, alignment: .leading)","","                            Image(systemName: forecast.icon)","                                .font(.system(size: 16))","                                .symbolRenderingMode(.multicolor)","                                .frame(width: 30)","","                            Spacer()","","                            Text(\"\\(forecast.low)°\")","                                .font(.subheadline)","                                .foregroundStyle(.secondary)","","                            \/\/ 온도 범위 바","                            ZStack(alignment: .leading) {","                                Capsule()","                                    .fill(.gray.opacity(0.3))","                                    .frame(width: 60, height: 4)","","                                Capsule()","                                    .fill(","                                        LinearGradient(","                                            colors: [.blue, .orange],","                                            startPoint: .leading,","                                            endPoint: .trailing","                                        )","                                    )","                                    .frame(width: 42, height: 4)","                            }","","                            Text(\"\\(forecast.high)°\")","                                .font(.subheadline.bold())","                        }","                    }","                }","            }","        }","        .padding()","        .background(","            LinearGradient(","                colors: [.blue.opacity(0.3), .cyan.opacity(0.2)],","                startPoint: .topLeading,","                endPoint: .bottomTrailing","            )","        )","    }","","    var hourlyForecasts: [LargeHourlyForecast] {","        [","            LargeHourlyForecast(time: \"지금\", icon: \"cloud.sun.fill\", temperature: 24),","            LargeHourlyForecast(time: \"15시\", icon: \"sun.max.fill\", temperature: 26),","            LargeHourlyForecast(time: \"16시\", icon: \"sun.max.fill\", temperature: 27),","            LargeHourlyForecast(time: \"17시\", icon: \"cloud.fill\", temperature: 25),","            LargeHourlyForecast(time: \"18시\", icon: \"cloud.moon.fill\", temperature: 23)","        ]","    }","","    var weeklyForecasts: [WeeklyForecast] {","        [","            WeeklyForecast(day: \"오늘\", icon: \"cloud.sun.fill\", low: 18, high: 28),","            WeeklyForecast(day: \"월\", icon: \"sun.max.fill\", low: 20, high: 30),","            WeeklyForecast(day: \"화\", icon: \"cloud.rain.fill\", low: 17, high: 24),","            WeeklyForecast(day: \"수\", icon: \"cloud.fill\", low: 16, high: 22)","        ]","    }","}","","struct LargeHourlyForecast: Identifiable {","    let id = UUID()","    let time: String","    let icon: String","    let temperature: Int","}","","struct WeeklyForecast: Identifiable {","    let id = UUID()","    let day: String","    let icon: String","    let low: Int","    let high: Int","}","","#Preview {","    LargeWeatherWidget()","        .previewContext(WidgetPreviewContext(family: .systemLarge))","}"],"fileName":"SizeGuide.swift","fileType":"swift"},"01-glanceable.swift":{"highlights":[],"type":"file","syntax":"swift","identifier":"01-glanceable.swift","content":["import SwiftUI","import WidgetKit","","\/\/\/ Glanceable (한눈에 파악) 원칙을 따르는 위젯 뷰","\/\/\/ 핵심 정보만 간결하게 표시: 기온, 날씨 아이콘, 도시명","struct GlanceableWeatherWidget: View {","    var body: some View {","        VStack(spacing: 8) {","            \/\/ 날씨 아이콘 - 시각적으로 즉시 인식 가능","            Image(systemName: \"sun.max.fill\")","                .font(.system(size: 40))","                .foregroundStyle(.yellow)","","            \/\/ 현재 기온 - 가장 중요한 정보를 크게","            Text(\"24°\")","                .font(.system(size: 48, weight: .bold))","","            \/\/ 도시명 - 위치 정보","            Text(\"서울\")","                .font(.subheadline)","                .foregroundStyle(.secondary)","        }","        .frame(maxWidth: .infinity, maxHeight: .infinity)","        .background(","            LinearGradient(","                colors: [.blue.opacity(0.3), .cyan.opacity(0.2)],","                startPoint: .topLeading,","                endPoint: .bottomTrailing","            )","        )","    }","}","","#Preview {","    GlanceableWeatherWidget()","        .previewContext(WidgetPreviewContext(family: .systemSmall))","}"],"fileName":"GlanceableExample.swift","fileType":"swift"},"01-personalized.swift":{"highlights":[],"type":"file","syntax":"swift","identifier":"01-personalized.swift","content":["import SwiftUI","import WidgetKit","","\/\/\/ Personalized (개인화) 원칙을 따르는 위젯","\/\/\/ 사용자가 설정한 옵션에 따라 다르게 표시","struct PersonalizedWeatherWidget: View {","    \/\/ 사용자 설정 가능한 옵션들","    let selectedCity: String      \/\/ 도시 선택","    let temperatureUnit: String   \/\/ °C 또는 °F","    let showFeelsLike: Bool       \/\/ 체감 온도 표시 여부","","    var body: some View {","        VStack(spacing: 16) {","            \/\/ 사용자가 선택한 도시","            HStack {","                Image(systemName: \"location.fill\")","                    .foregroundStyle(.blue)","                Text(selectedCity)","                    .font(.headline)","                Spacer()","            }","","            \/\/ 온도 - 사용자가 선택한 단위로 표시","            HStack(alignment: .top) {","                Text(currentTemperature)","                    .font(.system(size: 48, weight: .bold))","                Text(temperatureUnit)","                    .font(.title3)","                    .foregroundStyle(.secondary)","            }","","            \/\/ 체감 온도 - 사용자 설정에 따라 표시\/숨김","            if showFeelsLike {","                HStack {","                    Text(\"체감\")","                        .font(.caption)","                        .foregroundStyle(.secondary)","                    Text(feelsLikeTemperature)","                        .font(.subheadline.bold())","                }","            }","","            Divider()","","            \/\/ 추가 정보","            HStack {","                WeatherDetail(icon: \"humidity.fill\", value: \"65%\")","                Spacer()","                WeatherDetail(icon: \"wind\", value: \"12km\/h\")","            }","        }","        .padding()","        .frame(maxWidth: .infinity, maxHeight: .infinity)","        .background(","            LinearGradient(","                colors: [.orange.opacity(0.2), .pink.opacity(0.2)],","                startPoint: .top,","                endPoint: .bottom","            )","        )","    }","","    var currentTemperature: String {","        temperatureUnit == \"°C\" ? \"24\" : \"75\"","    }","","    var feelsLikeTemperature: String {","        temperatureUnit == \"°C\" ? \"22°\" : \"72°\"","    }","}","","struct WeatherDetail: View {","    let icon: String","    let value: String","","    var body: some View {","        HStack(spacing: 4) {","            Image(systemName: icon)","                .font(.caption)","            Text(value)","                .font(.caption)","        }","        .foregroundStyle(.secondary)","    }","}","","#Preview(\"Celsius\") {","    PersonalizedWeatherWidget(","        selectedCity: \"서울\",","        temperatureUnit: \"°C\",","        showFeelsLike: true","    )","    .previewContext(WidgetPreviewContext(family: .systemMedium))","}","","#Preview(\"Fahrenheit\") {","    PersonalizedWeatherWidget(","        selectedCity: \"New York\",","        temperatureUnit: \"°F\",","        showFeelsLike: false","    )","    .previewContext(WidgetPreviewContext(family: .systemMedium))","}"],"fileName":"PersonalizedExample.swift","fileType":"swift"},"doc://HIGWidgets/tutorials/HIGWidgets/06-Weather-Gradient#%EC%A1%B0%EA%B1%B4%EB%B3%84-%EA%B7%B8%EB%9E%98%EB%94%94%EC%96%B8%ED%8A%B8":{"type":"section","role":"pseudoSymbol","url":"\/tutorials\/higwidgets\/06-weather-gradient#%EC%A1%B0%EA%B1%B4%EB%B3%84-%EA%B7%B8%EB%9E%98%EB%94%94%EC%96%B8%ED%8A%B8","title":"조건별 그래디언트","kind":"section","identifier":"doc:\/\/HIGWidgets\/tutorials\/HIGWidgets\/06-Weather-Gradient#%EC%A1%B0%EA%B1%B4%EB%B3%84-%EA%B7%B8%EB%9E%98%EB%94%94%EC%96%B8%ED%8A%B8","abstract":[{"text":"HIG의 containerBackground를 활용하여","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"날씨 조건에 따라 위젯 배경이 자동으로 변하게 합니다."}]},"doc://HIGWidgets/tutorials/HIGWidgets/05-Medium-Large-Views":{"abstract":[{"text":"크기에 따라 정보량과 레이아웃을 달리하는 것이 HIG의 핵심입니다.","type":"text"},{"text":" ","type":"text"},{"text":"Medium에는 시간별 예보를, Large에는 주간 예보까지 추가합니다.","type":"text"}],"estimatedTime":"20min","role":"project","url":"\/tutorials\/higwidgets\/05-medium-large-views","title":"Medium & Large 위젯 뷰","kind":"project","identifier":"doc:\/\/HIGWidgets\/tutorials\/HIGWidgets\/05-Medium-Large-Views","type":"topic"},"doc://HIGWidgets/tutorials/HIGWidgets/06-Weather-Gradient":{"type":"topic","estimatedTime":"10min","role":"project","url":"\/tutorials\/higwidgets\/06-weather-gradient","kind":"project","title":"날씨 기반 그래디언트 배경","identifier":"doc:\/\/HIGWidgets\/tutorials\/HIGWidgets\/06-Weather-Gradient","abstract":[{"type":"text","text":"HIG의 containerBackground를 활용하여"},{"type":"text","text":" "},{"type":"text","text":"날씨 조건에 따라 위젯 배경이 자동으로 변하게 합니다."}]},"01-size-lockscreen.swift":{"highlights":[{"line":4},{"line":5},{"line":6},{"line":7},{"line":9},{"line":10},{"line":11},{"line":12},{"line":14},{"line":15},{"line":16},{"line":17},{"line":18},{"line":19},{"line":21},{"line":22},{"line":23},{"line":24},{"line":25},{"line":26},{"line":28},{"line":29},{"line":30},{"line":31},{"line":32},{"line":35},{"line":37},{"line":39},{"line":40},{"line":41},{"line":42},{"line":43},{"line":44},{"line":45},{"line":46},{"line":47},{"line":51},{"line":52},{"line":53},{"line":54},{"line":55},{"line":56},{"line":57},{"line":58},{"line":59},{"line":62},{"line":63},{"line":64},{"line":67},{"line":68},{"line":69}],"type":"file","syntax":"swift","identifier":"01-size-lockscreen.swift","content":["import SwiftUI","import WidgetKit","","\/\/\/ Lock Screen 위젯 (accessory)","\/\/\/ 극도로 간결해야 함 - 아이콘 + 기온만 표시","\/\/\/ 색상은 시스템이 제어 (항상 단색)","struct LockScreenWeatherWidget: View {","    var body: some View {","        \/\/ Circular (원형) 스타일","        VStack(spacing: 2) {","            Image(systemName: \"sun.max.fill\")","                .font(.system(size: 24))","","            Text(\"24°\")","                .font(.system(size: 16, weight: .semibold))","        }","        .widgetAccentable() \/\/ 시스템 색상 적용","    }","}","","\/\/\/ Rectangular (직사각형) 스타일","struct LockScreenWeatherRectangular: View {","    var body: some View {","        HStack {","            Image(systemName: \"sun.max.fill\")","                .font(.title2)","","            VStack(alignment: .leading, spacing: 2) {","                Text(\"24°\")","                    .font(.title3.bold())","                Text(\"서울\")","                    .font(.caption2)","            }","        }","        .widgetAccentable()","    }","}","","\/\/\/ Inline (인라인) 스타일 - 시계 위\/아래","struct LockScreenWeatherInline: View {","    var body: some View {","        HStack(spacing: 4) {","            Image(systemName: \"sun.max.fill\")","            Text(\"24° 서울\")","        }","        .font(.caption)","        .widgetAccentable()","    }","}","","\/\/ Lock Screen 위젯의 핵심 원칙:","\/\/ 1. 색상 최소화 - 시스템이 단색으로 변환","\/\/ 2. 정보 극소화 - 1-2개 데이터만","\/\/ 3. SF Symbols 활용 - 선명한 아이콘","\/\/ 4. widgetAccentable() 필수 - 액센트 컬러 적용","","#Preview(\"Circular\") {","    LockScreenWeatherWidget()","        .previewContext(WidgetPreviewContext(family: .accessoryCircular))","}","","#Preview(\"Rectangular\") {","    LockScreenWeatherRectangular()","        .previewContext(WidgetPreviewContext(family: .accessoryRectangular))","}","","#Preview(\"Inline\") {","    LockScreenWeatherInline()","        .previewContext(WidgetPreviewContext(family: .accessoryInline))","}"],"fileName":"SizeGuide.swift","fileType":"swift"},"doc://HIGWidgets/tutorials/HIGWidgets/01-Understanding-HIG-Widgets#%ED%81%AC%EA%B8%B0%EB%B3%84-%EB%94%94%EC%9E%90%EC%9D%B8-%EC%A0%84%EB%9E%B5":{"abstract":[{"type":"text","text":"Apple이 정의하는 “좋은 위젯”이란 무엇인지,"},{"type":"text","text":" "},{"type":"text","text":"HIG의 핵심 원칙 3가지를 학습합니다."}],"url":"\/tutorials\/higwidgets\/01-understanding-hig-widgets#%ED%81%AC%EA%B8%B0%EB%B3%84-%EB%94%94%EC%9E%90%EC%9D%B8-%EC%A0%84%EB%9E%B5","type":"section","kind":"section","identifier":"doc:\/\/HIGWidgets\/tutorials\/HIGWidgets\/01-Understanding-HIG-Widgets#%ED%81%AC%EA%B8%B0%EB%B3%84-%EB%94%94%EC%9E%90%EC%9D%B8-%EC%A0%84%EB%9E%B5","title":"크기별 디자인 전략","role":"pseudoSymbol"},"doc://HIGWidgets/tutorials/HIGWidgets/02-Widget-Extension-Setup":{"abstract":[{"text":"Xcode 프로젝트에 Widget Extension을 추가하고,","type":"text"},{"type":"text","text":" "},{"type":"text","text":"WidgetKit의 핵심 아키텍처를 이해합니다."}],"url":"\/tutorials\/higwidgets\/02-widget-extension-setup","type":"topic","kind":"project","estimatedTime":"15min","identifier":"doc:\/\/HIGWidgets\/tutorials\/HIGWidgets\/02-Widget-Extension-Setup","title":"Widget Extension 세팅","role":"project"},"doc://HIGWidgets/tutorials/HIGWidgets/09-City-Configuration#WidgetConfigurationIntent":{"type":"section","kind":"section","role":"pseudoSymbol","url":"\/tutorials\/higwidgets\/09-city-configuration#WidgetConfigurationIntent","abstract":[{"type":"text","text":"App Intent Configuration으로 사용자가 위젯에서"},{"type":"text","text":" "},{"type":"text","text":"날씨를 확인할 도시를 직접 선택하게 합니다."},{"type":"text","text":" "},{"type":"text","text":"HIG의 “Personalized” 원칙을 구현합니다."}],"title":"WidgetConfigurationIntent","identifier":"doc:\/\/HIGWidgets\/tutorials\/HIGWidgets\/09-City-Configuration#WidgetConfigurationIntent"},"doc://HIGWidgets/tutorials/HIGWidgets/04-Small-Widget-View#Check-Your-Understanding":{"titleInlineContent":[{"text":"Check Your Understanding","type":"text"}],"identifier":"doc:\/\/HIGWidgets\/tutorials\/HIGWidgets\/04-Small-Widget-View#Check-Your-Understanding","title":"Check Your Understanding","url":"\/tutorials\/higwidgets\/04-small-widget-view#Check-