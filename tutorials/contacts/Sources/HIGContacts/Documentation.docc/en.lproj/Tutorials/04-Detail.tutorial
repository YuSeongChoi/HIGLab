    @Assessments {
        @MultipleChoice {
            What class is used to format a contact's full name?
            
            @Choice(isCorrect: true) {
                `CNContactFormatter`
                
                @Justification(reaction: "Correct! ðŸŽ‰") {
                    `CNContactFormatter` automatically handles 
                    localized name formatting.
                }
            }
            
            @Choice(isCorrect: false) {
                `PersonNameComponentsFormatter`
                
                @Justification(reaction: "Try again.") {
                    This is a Foundation class that's not 
                    directly usable with CNContact.
                }
            }
            
            @Choice(isCorrect: false) {
                `CNNameFormatter`
                
                @Justification(reaction: "Try again.") {
                    This class does not exist.
                }
            }
        }
        
        @MultipleChoice {
            What type stores labels (home, work, etc.) together with values for phone numbers or emails?
            
            @Choice(isCorrect: false) {
                `Dictionary<String, String>`
                
                @Justification(reaction: "Try again.") {
                    The Contacts framework uses a dedicated type.
                }
            }
            
            @Choice(isCorrect: true) {
                `CNLabeledValue`
                
                @Justification(reaction: "Correct! ðŸŽ‰") {
                    `CNLabeledValue` is a generic type that 
                    stores labels and values together.
                }
            }
            
            @Choice(isCorrect: false) {
                `(label: String, value: String)`
                
                @Justification(reaction: "Try again.") {
                    A dedicated type is used, not a tuple.
                }
            }
        }
    }
