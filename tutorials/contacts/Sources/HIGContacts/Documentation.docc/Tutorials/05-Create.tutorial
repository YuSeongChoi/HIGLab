    @Assessments {
        @MultipleChoice {
            What class is used to create a new contact?
            
            @Choice(isCorrect: false) {
                `CNContact`
                
                @Justification(reaction: "Try again.") {
                    `CNContact` is an immutable class.
                }
            }
            
            @Choice(isCorrect: true) {
                `CNMutableContact`
                
                @Justification(reaction: "Correct! ðŸŽ‰") {
                    `CNMutableContact` is a mutable contact class 
                    used for creating new contacts.
                }
            }
            
            @Choice(isCorrect: false) {
                `CNNewContact`
                
                @Justification(reaction: "Try again.") {
                    This class does not exist.
                }
            }
        }
        
        @MultipleChoice {
            What class is used to save a contact?
            
            @Choice(isCorrect: true) {
                `CNSaveRequest`
                
                @Justification(reaction: "Correct! ðŸŽ‰") {
                    Add, update, or delete operations are added to 
                    `CNSaveRequest` and then executed.
                }
            }
            
            @Choice(isCorrect: false) {
                `CNContactStore.save(_:)`
                
                @Justification(reaction: "Try again.") {
                    Contacts are not passed directly; 
                    they are saved through CNSaveRequest.
                }
            }
            
            @Choice(isCorrect: false) {
                `CNMutableContact.save()`
                
                @Justification(reaction: "Try again.") {
                    The contact itself doesn't have a save method.
                }
            }
        }
    }
