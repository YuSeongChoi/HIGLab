@Tutorial(time: 10) {
    @Intro(title: "Testing Live Activity") {
        Learn how to test Live Activity on the simulator and real devices.
    }
    
    @Section(title: "Simulator Testing") {
        @ContentAndMedia {
            Test Live Activity in the Xcode simulator.
            Use a device simulator that has Dynamic Island.
        }
        
        @Steps {
            @Step {
                Create an APNs file for push notification testing.
                
                @Code(name: "TestPayload.apns", file: "09-apns-test.swift")
            }
            
            @Step {
                Send push notifications to the simulator using the xcrun command.
                
                @Code(name: "Terminal", file: "09-simctl-push.swift")
            }
        }
    }
    
    @Section(title: "Debug Logging") {
        @ContentAndMedia {
            Debug by logging Activity state changes.
        }
        
        @Steps {
            @Step {
                Add debug code to monitor Activity state.
                
                @Code(name: "DebugHelper.swift", file: "09-debug-logging.swift")
            }
        }
    }
    
    @Assessments {
        @MultipleChoice {
            What command is used for Live Activity Push testing in the simulator?
            
            @Choice(isCorrect: false) {
                xcodebuild push
                
                @Justification(reaction: "Think again.") {
                    xcodebuild is a build tool.
                }
            }
            
            @Choice(isCorrect: true) {
                xcrun simctl push
                
                @Justification(reaction: "Correct! ðŸŽ‰") {
                    The simctl push command sends push notifications to the simulator.
                }
            }
            
            @Choice(isCorrect: false) {
                swift push
                
                @Justification(reaction: "Not quite.") {
                    The swift command does not have a push option.
                }
            }
        }
    }
}
